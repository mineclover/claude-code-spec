{
  "$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "experimentalScannerIgnores": [
      "node_modules",
      "dist",
      "packages/*/dist",
      ".vite",
      "out",
      "*.log"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noConsole": "off",
        "noArrayIndexKey": "warn",
        "noImplicitAnyLet": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useTemplate": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noInvalidUseBeforeDeclaration": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "complexity": {
        "noBannedTypes": "warn"
      },
      "a11y": {
        "noLabelWithoutControl": "off",
        "noStaticElementInteractions": "off",
        "useButtonType": "off",
        "useKeyWithClickEvents": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "overrides": [
    {
      "includes": ["src/main.ts", "src/preload.ts"],
      "javascript": {
        "globals": ["__dirname", "process", "Buffer"]
      }
    },
    {
      "includes": ["src/renderer/**/*"],
      "javascript": {
        "globals": ["window", "document"]
      }
    }
  ]
}
