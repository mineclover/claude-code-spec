{
  "$schema": "meta-schema",
  "description": "Template for document metadata",
  "structure": {
    "filePath": "string - Absolute path to the document",
    "tags": "array - Search and categorization tags",
    "reviews": "array - User reviews and feedback",
    "improvements": "array - Suggested improvements",
    "searchKeywords": "array - Additional search keywords",
    "lastUpdated": "timestamp - Last metadata update time",
    "rating": "number - Overall document rating (1-5)"
  },
