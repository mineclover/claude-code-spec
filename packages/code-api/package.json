{
  "name": "@context-action/code-api",
  "version": "0.1.0",
  "description": "Claude Code CLI Client Library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit",
    "test": "npm run test:schema && npm run test:zod",
    "test:schema": "tsx tests/test-schema-standalone.ts",
    "test:schema-validation": "tsx tests/test-schema-validation.ts",
    "test:zod": "tsx tests/test-zod-schema.ts",
    "test:zod-claude": "tsx tests/test-zod-with-claude.ts",
    "test:pipeline": "tsx tests/test-full-pipeline.ts",
    "example:query": "tsx examples/example-query-api.ts",
    "example:json": "tsx examples/example-json-extraction.ts",
    "example:entrypoint": "tsx examples/example-entrypoint.ts"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "client",
    "stream",
    "parser"
  ],
  "author": {
    "name": "mineclover",
    "email": "mineclover@naver.com"
  },
  "license": "MIT",
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.12",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "zod": "^3.25.76"
  }
}
